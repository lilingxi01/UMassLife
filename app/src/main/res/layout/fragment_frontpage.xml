<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:background="@color/bg_lightBrown1"/>

    <com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frontPage_refreshLayout"
        app:tr_enable_overscroll="true"
        app:tr_enable_refresh="false"
        app:tr_enable_loadmore="false">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="220dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="31dp"
                    android:layout_marginRight="31dp"
                    android:layout_alignParentBottom="true">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/frontPage_header_boldText"
                        android:textColor="@color/text_mainBlack"
                        android:textSize="32dp"
                        android:layout_marginBottom="6dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/frontPage_header_lightText"
                        android:textColor="@color/text_secondBlack"
                        android:textSize="15dp"
                        android:layout_marginBottom="10dp"/>
                </LinearLayout>
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:id="@+id/frontPage_header_cardBtn"
                android:clickable="true"
                android:focusable="true"
                android:foreground="#00ffffff"
                app:cardBackgroundColor="@color/bg_lightBrown2"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp">

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout>

</RelativeLayout>