<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="@color/bg_appbg"
    android:layout_marginTop="-60dp"
    android:layout_marginBottom="-45dp"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/mainActivity_Fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_appbg"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_alignParentBottom="true"
        android:background="@color/bg_NavigationColor" >
        <!-- 导航栏 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:orientation="horizontal"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_alignParentTop="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:focusable="true"
                android:clickable="true"
                android:id="@+id/MainActivity_NavigationBar_1_layout">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerInParent="true">
                    <ImageView
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="centerInside"
                        android:id="@+id/MainActivity_NavigationBar_1_img"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="4dp"
                        android:textColor="@color/text_NavigationColor"
                        android:textSize="11dp"
                        android:id="@+id/MainActivity_NavigationBar_1_text"
                        android:letterSpacing="0.02"
                        android:text="首页"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:focusable="true"
                android:clickable="true"
                android:id="@+id/MainActivity_NavigationBar_2_layout">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerInParent="true">
                    <ImageView
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="centerInside"
                        android:id="@+id/MainActivity_NavigationBar_2_img"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="4dp"
                        android:textColor="@color/text_NavigationColor"
                        android:textSize="11dp"
                        android:id="@+id/MainActivity_NavigationBar_2_text"
                        android:letterSpacing="0.02"
                        android:text="探索"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:focusable="true"
                android:clickable="true"
                android:id="@+id/MainActivity_NavigationBar_3_layout">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerInParent="true">
                    <ImageView
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="centerInside"
                        android:id="@+id/MainActivity_NavigationBar_3_img"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="4dp"
                        android:textColor="@color/text_NavigationColor"
                        android:textSize="11dp"
                        android:id="@+id/MainActivity_NavigationBar_3_text"
                        android:letterSpacing="0.02"
                        android:text="我"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>