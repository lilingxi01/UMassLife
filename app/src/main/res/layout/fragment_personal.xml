<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="110dp"
        android:background="@drawable/personal_bg"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:id="@+id/personal_header_bgName"
        android:textColor="@color/bg_lightBrown2"
        android:textSize="100dp"
        android:letterSpacing="-0.01"
        android:layout_marginTop="60dp"
        android:paddingLeft="-250dp"
        android:paddingRight="-250dp"
        android:singleLine="true"
        android:gravity="center"/>

    <com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/personal_refreshLayout"
        app:tr_enable_overscroll="true"
        app:tr_enable_refresh="false"
        app:tr_enable_loadmore="false">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="60dp"
                android:paddingBottom="110dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="31dp"
                        android:layout_marginRight="31dp"
                        android:layout_centerVertical="true">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/personal_header_name"
                            android:textColor="@color/text_mainBlack"
                            android:textSize="38dp"
                            android:letterSpacing="0.01"
                            android:layout_marginTop="6dp"
                            android:layout_marginBottom="6dp"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/personal_header_major"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="20dp"
                        android:textColor="@color/text_secondBlack"
                        android:textSize="16dp"/>
                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:id="@+id/personal_debit"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="#00ffffff"
                    app:cardBackgroundColor="@color/bg_lightBrown2"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="25dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@color/used_brown"
                            android:paddingTop="20dp"
                            android:paddingBottom="20dp"
                            android:paddingLeft="25dp"
                            android:paddingRight="25dp">
                            <RelativeLayout
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:background="@mipmap/personal_debit"
                                android:layout_gravity="center_vertical" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="18dp"
                                android:textColor="@color/text_mainWhite"
                                android:textSize="17dp"
                                android:text="My Account"
                                android:id="@+id/personal_debit_title" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="25dp"
                            android:paddingRight="25dp"
                            android:paddingTop="25dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_gravity="center_vertical"
                                android:textColor="@color/text_secondBlack"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:text="DEBIT" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right|center_vertical"
                                android:textColor="@color/text_mainBlack"
                                android:textSize="36dp"
                                android:letterSpacing="-0.03"
                                android:id="@+id/personal_debit_num" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="25dp"
                            android:paddingRight="25dp"
                            android:paddingTop="20dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_gravity="center_vertical"
                                android:textColor="@color/text_secondBlack"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:text="DINING DOLLAR" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right|center_vertical"
                                android:textColor="@color/text_mainBlack"
                                android:textSize="36dp"
                                android:letterSpacing="-0.03"
                                android:id="@+id/personal_debit_diningDollar" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:id="@+id/frontPage_hold"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="#00ffffff"
                    app:cardBackgroundColor="@color/used_red"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <RelativeLayout
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@mipmap/frontpage_hold"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="28dp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20dp"
                            android:textColor="@color/text_mainWhite"
                            android:textSize="17dp"
                            android:letterSpacing="0.01"
                            android:id="@+id/frontPage_hold_text" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </ScrollView>
    </com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout>

</RelativeLayout>